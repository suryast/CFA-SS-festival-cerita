<div class="container" style="padding-top:2rem">
	<h3>STORIES</h3>
</div>
<div class="container">
		<div class="row">
			{{# each data.posts.results}}
			<div class="col-sm-4 col-md-4">
				<div class="thumbnail">
					{{#if image}}<img src="{{{cloudinaryUrl image width=400 height=400 crop='fit' }}}">{{/if}}
					<div class="caption">
						<h3><a href="{{eventUrl slug}}">{{{title}}}</a></h3>
						<p class="lead text-muted">{{{categoryList categories prefix="Posted in "}}}
						<h4 class="text-muted">{{publishedDate}}</h4>
					</div>
				</div>
			</div>
			{{/each}}
		</div>
		<div class="pull-right">
			<a href="/blog" type="btn btn-link" style="color:black">View all stories..</br></a>
		</div>
</div>
